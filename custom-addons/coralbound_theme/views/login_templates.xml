<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Customize Login Page Layout -->
        <template id="login_layout_custom" name="Custom Login Layout" inherit_id="web.login_layout">
            <!-- Add custom CSS to the head -->
            <xpath expr="//head" position="inside">
                <style>
                    .o_login_form {
                        background-color: white;
                        border-radius: 12px;
                        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                        padding: 2rem;
                        max-width: 400px;
                        margin: 0 auto;
                    }

                    .o_database_list {
                        background-color: white;
                        border-radius: 12px;
                        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                        padding: 2rem;
                    }

                    body {
                        background: linear-gradient(135deg, var(--primary-color, #2B6CB0) 0%, var(--secondary-color, #4299E1) 100%);
                        min-height: 100vh;
                    }

                    .o_login_logo img {
                        max-height: 60px;
                        margin-bottom: 2rem;
                    }
                </style>
            </xpath>

            <!-- Add custom content above the login form -->
            <xpath expr="//div[hasclass('o_login_form')]" position="before">
                <div class="text-center mb-4">
                    <h2 class="text-white mb-2">Welcome to Coralbound</h2>
                    <p class="text-white opacity-75">Sign in to your account</p>
                </div>
            </xpath>

            <!-- Customize the login form title -->
            <xpath expr="//div[hasclass('o_login_form')]//h1" position="replace">
                <h3 class="text-center mb-4" style="color: var(--primary-color, #2B6CB0);">
                    Login to Your Account
                </h3>
            </xpath>
        </template>

        <!-- Customize Database Manager Page -->
        <template id="database_manager_custom" name="Custom Database Manager" inherit_id="web.database_manager">
            <xpath expr="//head" position="inside">
                <style>
                    body {
                        background: linear-gradient(135deg, var(--primary-color, #2B6CB0) 0%, var(--secondary-color, #4299E1) 100%);
                        min-height: 100vh;
                    }
                </style>
            </xpath>
        </template>

        <!-- Add custom footer to login page -->
        <template id="login_footer_custom" name="Custom Login Footer" inherit_id="web.login_layout">
            <xpath expr="//body" position="inside">
                <div class="text-center mt-4">
                    <small class="text-white opacity-75">
                        Â© 2024 Coralbound. All rights reserved.
                    </small>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
